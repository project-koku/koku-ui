{
  "name": "@koku-ui/ui-lib-hccm",
  "version": "0.0.1",
  "description": "Library of HCCM components and utilities",
  "repository": "https://github.com/project-koku/koku-ui.git",
  "author": "Red Hat",
  "license": "Apache-2.0",
  "private": true,
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./*": {
      "source": "./src/*",
      "types": "./dist/src/*.d.ts",
      "default": "./dist/src/*.js",
      "typescript": "./src/*.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prebuild": "tsc --noEmit && rimraf dist",
    "build": "tsc --build && npm run copy:css",
    "check:dependencies": "npx npm-check-updates",
    "check:dependencies:update": "npx npm-check-updates -u",
    "clean": "rimraf dist",
    "copy:css": "rsync -Rurv --include '*/' --include '*.{css,scss}' --exclude '*' src  dist",
    "dev": "tsc -w",
    "lint": "npm-run-all lint:*",
    "lint:ts": "eslint src",
    "lint:ts:fix": "eslint src --fix",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "@patternfly/patternfly": "6.4.0",
    "@patternfly/react-charts": "8.4.0",
    "@patternfly/react-component-groups": "6.4.0",
    "@patternfly/react-core": "6.4.0",
    "@patternfly/react-icons": "6.4.0",
    "@patternfly/react-table": "6.4.0",
    "@patternfly/react-tokens": "6.4.0",
    "@reduxjs/toolkit": "^2.11.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "echarts": "^6.0.0",
    "js-file-download": "^0.4.12",
    "lodash": "^4.17.21",
    "qs": "^6.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intl": "^7.1.14",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "typesafe-actions": "^5.1.0",
    "victory": "^37.3.6"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.7.4",
    "@formatjs/ecma402-abstract": "^2.3.6",
    "@formatjs/fast-memoize": "^2.2.7",
    "@formatjs/icu-messageformat-parser": "^2.11.4",
    "@formatjs/intl": "^3.1.8",
    "@formatjs/intl-localematcher": "^0.6.2",
    "@redhat-cloud-services/frontend-components": "^7.0.13", 
    "@redhat-cloud-services/frontend-components-notifications": "^6.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/qs": "^6.14.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "react-intl": "^7.1.14",
    "redux": "^5.0.1"
  }
}
