{
  "name": "@koku-ui/utils",
  "version": "0.0.1",
  "description": "Library of KOKU UI utils",
  "repository": "https://github.com/project-koku/koku-ui.git",
  "author": "Red Hat",
  "license": "Apache-2.0",
  "private": true,
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./*": {
      "source": "./src/*",
      "types": "./dist/src/*.d.ts",
      "default": "./dist/src/*.js",
      "typescript": "./src/*.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prebuild": "tsc --noEmit && rimraf dist",
    "build": "tsc --build",
    "check:dependencies": "npx npm-check-updates",
    "check:dependencies:update": "npx npm-check-updates -u",
    "clean": "rimraf dist",
    "dev": "tsc -w",
    "lint": "npm-run-all lint:*",
    "lint:ts": "eslint src",
    "lint:ts:fix": "eslint src --fix",
    "test": "jest --no-cache --passWithNoTests"
  }
}
